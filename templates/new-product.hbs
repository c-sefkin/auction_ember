<h3>Submit an item for sale</h3>

<form>
  <div class="form-group">
    <label for="description">Description:</label>
    {{textarea value=description id="description" class="form-control" rows="1"}}
  </div>

  <div class="form-group">
    <label for="owner">Owner</label>
    {{textarea value=owner id="owner" class="form-control" rows="1"}}
  </div>

  <div class="form-group">
    <label for="bid">Bid Number</label>
    {{textarea value=bid id="bid" class="form-control" rows="1"}}
  </div>

  <div class="form-group">
    <label for="price">Starting Price</label>
    {{textarea value=price id="price" class="form-control" rows="1"}}
  </div>

  <div class="form-group">
    <label for="story">Backstory</label>
    {{textarea value=story id="story" class="form-control" rows="1"}}
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    {{textarea value=image  id="image" class="form-control" rows="1"}}
  </div>

  <div class="form-group">
    <label for="year">Year Acquired</label>
    {{textarea value=year id="year" class="form-control" rows="1"}}
  </div>

  <button class="btn btn-primary" {{action "save"}}>Submit Item</button>
</form>
